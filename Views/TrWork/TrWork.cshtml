@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            workInit();
            //trworkInit();
        });


        function CheckSave() {
            var s1 = $('#trName').val().replace(/ /ig, '');
            var s2 = $('#workId option:selected').val();
            if (s1.length > 0 && s2.length >0 ) {
                return true;
            }
            else {
                alert('Одно из обязательных полей не заполнено');
                return false;
            }
        }

        function CheckSave1() {
            var s1 = $('#workTypeId option:selected').val();
            var s2 = $('#workId option:selected').val() ;
     
           if (s1 != 'undefined' && s2 != 'undefined') {
                return true;
            }
            else {
                alert('Одно из обязательных полей не заполнено');
                return false;
            }
        }

        function workInit() {
            var workSelect = $("#workId");
            $.ajax({
                cache: false,
                type: "GET",
                url: '@Url.Action("getTrWork", "TrWork")',
                    success: function (data) {
                        $.each(data, function (id, option) {
                            workSelect.append($('<option></option>').val(option.id).html(option.name));
                        });
                        $(workSelect).val('-1').change();
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                       alert('Не удалось получить данные.');
                    }
                });
        }

            function   trworkInit() {
