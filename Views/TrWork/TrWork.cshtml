@model  MultiProcess.Models.TrWorkModel
@{

    ViewBag.Title = "TrWork";
}

 

<h2 style="border-bottom:1px solid black">Расшифровка</h2>

<form id="formOrg" action="/TrWork/TrWork" method="post">
    <div>
        <table class="table-org">

                <tbody>
                    <tr>
                        <td class="td-width">
                            <h3></h3>
                            <table>
                                <thead>
                                    <tr>

                                        <td  class="td-padding">
                                            Наименование Работы
                                        </td>
                                        <td class="td-padding">
                                            Расшифровка
                                        </td>

                                    </tr>
                                </thead>
                                <tbody class="qw">
                                   
                                        @if (Model.TrWorkList != null)
                                        {
                                            int i = 0;
                                            int a = 0;
                                            foreach (var tworg in Model.TrWorkList)
                                            {
                                                if(i > 0)
                                                {
                                                     a = i - 1;
                                                }
                                                <tr>
                                                    @if (tworg.WorkName == Model.TrWorkList[a].WorkName && i != 0 ) { 
                                                    <td  @*rowspan="4"*@  class="td-padding1">
                                                    
                                                    </td>
                                                    }
                                                    else
                                                    {
                                                        <td @*rowspan="4"*@ class="td-padding td-nonbrbttm">
                                                            @tworg.WorkName
                                                        </td>
                                                    }
                                                    <td class="td-padding">
                                                        @tworg.trName
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                   
                                </tbody>
                            </table>
                        </td>
                        <td class="td-width" style="padding-left:100px">
                            <h3>Добавить Работу </h3>
                            <table class="table-org">
                                <tbody>
                                    <tr>
                                        <td class="table-org">
                                            <label style="width: 49%"> Введите расшифровку</label>
                                            <div style="width: 49%;margin-bottom:10px">
                                                @Html.TextBoxFor(e => e.trName, new { @class = "form-control" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="table-org">
                                            <label style="width: 49%">Укажите работу</label>
                                            <div style="width: 49%;margin-bottom:10px">
                                                @Html.DropDownListFor(e => e.workId, new List<SelectListItem>(), new { @class = "class-base-list" })
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="table-org">
                                            <button class="btn btn-default" type="submit" onclick="return CheckSave()">Сохранить</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
</table>
    </div>
</form>

